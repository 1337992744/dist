            <groupId>org.jboss.seam</groupId>
            <artifactId>seam-jms</artifactId>
            <version>${seam.jms.version}</version>
         </dependency>

         <dependency>
            <groupId>org.jboss.seam</groupId>
            <artifactId>seam-mail</artifactId>
            <version>${seam.mail.version}</version>
         </dependency>

         <dependency>
            <groupId>org.jboss.seam</groupId>
            <artifactId>seam-pdf</artifactId>
